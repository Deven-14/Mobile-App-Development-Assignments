<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assignment1Activity">

    <ImageView
        android:id="@+id/imgDog"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@mipmap/dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Dog"
        app:layout_constraintEnd_toEndOf="@id/imgDog"
        app:layout_constraintStart_toStartOf="@id/imgDog"
        app:layout_constraintTop_toBottomOf="@id/imgDog" />

    <ImageView
        android:id="@+id/imgCat"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgDog"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cat"
        app:layout_constraintEnd_toEndOf="@id/imgCat"
        app:layout_constraintStart_toStartOf="@id/imgCat"
        app:layout_constraintTop_toBottomOf="@id/imgCat" />

</androidx.constraintlayout.widget.ConstraintLayout>