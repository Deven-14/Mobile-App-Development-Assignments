<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assignment3.Assignment3Q7Activity"
    android:background="@color/blue"
    android:id="@+id/layout_assignment3_q7">

    <Button
        android:id="@+id/teal700Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teal700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pinkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="pink"
        app:layout_constraintBottom_toTopOf="@+id/teal700Btn"
        app:layout_constraintEnd_toEndOf="@+id/teal700Btn"
        app:layout_constraintStart_toStartOf="@+id/teal700Btn" />

    <Button
        android:id="@+id/blueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Blue"
        app:layout_constraintEnd_toEndOf="@+id/teal700Btn"
        app:layout_constraintStart_toStartOf="@+id/teal700Btn"
        app:layout_constraintTop_toBottomOf="@+id/teal700Btn" />

</androidx.constraintlayout.widget.ConstraintLayout>